<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/dashboardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to MyFitness+"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textProgressHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories Burned Today:"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCaloriesBurned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 kcal"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textGoalHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Daily Calorie Goal:"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter calorie goal (e.g., 500)"
            android:inputType="number" />

        <Button
            android:id="@+id/btnSetGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Goal"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textSuggestionsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Suggestions"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textSuggestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggestions will appear here based on your goals."
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textSyncStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sync: Connected"
            android:textColor="@android:color/holo_green_dark" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
